{
  "name": "GoodTranslator",
  "description" : "A Chrome Extension To Translate",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "good.html",
    "default_icon": "good.png"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "commands": {
    "translate-zh": {
      "suggested_key": {
        "default": "Alt+1",
        "mac": "MacCtrl+1"
      },
      "description": "translate-zh"
    },
    "translate-en": {
      "suggested_key": {
        "default": "Alt+2",
        "mac": "MacCtrl+2"
      },
      "description": "translate-en"
    },
    "clean": {
      "suggested_key": {
        "default": "Alt+3",
        "mac": "MacCtrl+3"
      },
      "description": "clean"
    }

  },
  "permissions": [   
    "tabs",
    "notifications",
    "http://*/",
    "https://*/", 
    "activeTab",
    "storage"
  ]
}
